    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://127.0.0.1:8000"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox",
            "url": "http://127.0.0.1:8000"
        },
        {
            "name": "Reset all databases",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/reset_all_dbs.py",
            "justMyCode": false
        },
        {
            "name": "Make migrations",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "makemigrations"
            ],
            "justMyCode": true
        },
        {
            "name": "Migrate all databases",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/migrate_all_dbs.py",
            "justMyCode": false
        },
        {
            "name": "Databases initial setup",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/databases_initial_setup.py",
            "justMyCode": false
        },
        {
            "name": "Run server",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Run core app tests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "core",
            ]
        },
        {
            "name": "Run users app tests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "users",
            ]
        },
        {
            "name": "Run news_feed app tests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "test",
                "news_feed",
            ]
        },
        {
            "name": "Run articles app tests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "articles",
            ]
        },
    ]
}
