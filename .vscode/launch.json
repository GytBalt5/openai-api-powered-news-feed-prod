    "version": "0.2.2",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "LaunchChrome",
            "url": "http://127.0.0.1:8000"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "LaunchFirefox",
            "url": "http://127.0.0.1:8000"
        },
        {
            "name": "ResetAllDatabases",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/reset_all_dbs.py",
            "justMyCode": false
        },
        {
            "name": "MakeMigrations",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "makemigrations"
            ],
            "justMyCode": true
        },
        {
            "name": "MigrateAllDatabases",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/migrate_all_dbs.py",
            "justMyCode": false
        },
        {
            "name": "DatabasesInitialSetup",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/databases_initial_setup.py",
            "justMyCode": false
        },
        {
            "name": "RunServer",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "RunCoreAppTests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "core",
            ]
        },
        {
            "name": "RunUsersAppTests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "users",
            ]
        },
        {
            "name": "RunNewsFeedAppTests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "news_feed",
            ]
        },
        {
            "name": "RunArticlesAppTests",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/django_backend/.venv/Scripts/python",
            "program": "${workspaceFolder}/django_backend/manage.py",
            "args": [
                "test",
                "articles",
            ]
        },
    ]
}
